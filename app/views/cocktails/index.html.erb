<h1 class="text-center">Cocktails list</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <ul class="list-group">
        <% @cocktails.each do |cocktail| %>
          <%= link_to cocktail_path(cocktail.id), class: "btn btn-link" do %>
            <li class="list-group-item">
              <%= cocktail.name %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm text-center">
      <%= link_to 'Add a new cocktail', new_cocktail_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
