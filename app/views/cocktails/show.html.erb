<h1 class="text-center">Cocktail details</h1>

<div class="row">
  <div class="col-sm-6 text-center">
    <div class="card " style="width: 18rem;">
      <img src="https://loremflickr.com/320/240/cocktail,glass,#{<%= @cocktail.name %>}" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"> <%= @cocktail.name  %> </h5>
        <% @cocktail.doses.each do |dose| %>
          <li class="card-text">
          <%= dose.description %> <%= dose.ingredient.name %>
          </li>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm text-center">
    <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-sm text-center">
    <%= link_to 'Back to cocktails list', cocktails_path, class: "btn btn-primary" %>
  </div>
</div>

